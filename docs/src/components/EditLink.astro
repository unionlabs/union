---
import { Icon } from "@astrojs/starlight/components"

interface Props {
  editUrl: string
  labels: {
    "page.editLink": string
  }
}

/**
 * The edit url is overridden to point to our discord until source code is public
 */

const { editUrl = "https://discord.union.build", labels } = Astro.props
---

{
  editUrl && (
    <a href={editUrl} class="sl-flex">
      <Icon name="pencil" size="1.2em" />
      {labels['page.editLink']}
    </a>
  )
}

<style>
  a {
    gap: 0.5rem;
    align-items: center;
    text-decoration: none;
    color: var(--sl-color-gray-3);
  }
  a:hover {
    color: var(--sl-color-white);
  }
</style>
