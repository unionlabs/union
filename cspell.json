{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "union",
      "path": "dictionary.txt",
      "addWords": true
    }
  ],
  "caseSensitive": false,
  "dictionaries": ["en_US", "companies", "softwareTerms", "go", "union"],
  "ignorePaths": [
    "**/*.graphql",
    "light-clients/ethereum-light-client/src/test/**",
    "generated/**",
    "dictionaries/**",
    "**/*.svg",
    "**/node_modules",
    "uniond/vendor",
    "uniond/x/union/types",
    "uniond/x/tokenfactory",
    "uniond/proto",
    "galoisd/vendor",
    "tools/vendor",
    "**/go.mod",
    "**/go.sum",
    "evm",
    "**/*.pb.go",
    "**/testdata",
    "networks/genesis/union-testnet-2/**",
    "networks/genesis/union-testnet-3/**",
    "networks/genesis/union-testnet-4/**",
    "hubble/hasura/**",
    "site/src/lib/abi/**",
    "e2e/upgrades.nix",
    "yarn.lock",
    "bun.lockb"
  ]
}
