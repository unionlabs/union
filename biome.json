{
  "$schema": "https://esm.sh/@biomejs/biome@1.8.3/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": false,
    "include": [
      "*.ts",
      "*.mts",
      "*.js",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.vue",
      "*.d.ts",
      "*.json",
      "*.jsonc",
      "*.astro",
      "*.svelte"
    ],
    "ignore": [
      "_",
      "out",
      "dist",
      "build",
      ".sqlx",
      "result",
      "vendor",
      "testdata",
      "generated",
      ".svelte-kit",
      "node_modules",
      "package-lock.json",
      "./app/src/generated",
      "./lib/poseidon-rs/constants.json"
    ]
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "single",
      "indentStyle": "space"
    },
    "parser": {
      "allowWrongLineComments": true
    }
  },
  "files": {
    "maxSize": 3048576,
    "include": [
      "*.ts",
      "*.mts",
      "*.js",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.vue",
      "*.json",
      "*.jsonc",
      "*.astro",
      "*.svelte"
    ],
    "ignoreUnknown": true,
    "ignore": [
      "_",
      "out",
      "dist",
      "build",
      ".sqlx",
      "result",
      "vendor",
      "testdata",
      "generated",
      ".svelte-kit",
      "node_modules",
      "package-lock.json",
      "./app/src/generated",
      "./lib/poseidon-rs/constants.json"
    ]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "attributePosition": "auto",
    "include": [
      "*.ts",
      "*.mts",
      "*.js",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.vue",
      "*.json",
      "*.jsonc",
      "*.astro",
      "*.svelte"
    ],
    "ignore": [
      "_",
      "out",
      "dist",
      "build",
      ".sqlx",
      "result",
      "vendor",
      "testdata",
      "generated",
      ".svelte-kit",
      "node_modules",
      "package-lock.json",
      "./app/src/generated",
      "./lib/poseidon-rs/constants.json"
    ]
  },
  "linter": {
    "rules": {
      "all": true,
      "style": {
        "all": true,
        "useConst": "off",
        "noNamespace": "off",
        "noDefaultExport": "off",
        "useFragmentSyntax": "off",
        "noParameterAssign": "off",
        "noNamespaceImport": "off",
        "useBlockStatements": "off",
        "useNamingConvention": "off",
        "useShorthandArrayType": "off",
        "useSelfClosingElements": "off",
        "noUnusedTemplateLiteral": "off",
        "useFilenamingConvention": "off",
        "useConsistentArrayType": {
          "level": "warn",
          "options": { "syntax": "generic" }
        }
      },
      "a11y": {
        "all": true,
        "noSvgWithoutTitle": "off",
        "noDistractingElements": "off"
      },
      "nursery": {
        "all": true,
        "noConsole": "off",
        "useTopLevelRegex": "off",
        "noExportedImports": "off",
        "useImportRestrictions": "off",
        "noUndeclaredDependencies": "off",
        "noUnusedFunctionParameters": "off",
        "noUselessUndefinedInitialization": "off"
      },
      "performance": {
        "all": true,
        "noDelete": "off",
        "noBarrelFile": "off",
        "noReExportAll": "off",
        "noAccumulatingSpread": "warn"
      },
      "correctness": {
        "all": true,
        "noNodejsModules": "off",
        "noUnusedVariables": "off",
        "noUndeclaredVariables": "off"
      },
      "suspicious": {
        "all": true,
        "noConsoleLog": "off",
        "noExplicitAny": "off",
        "noCatchAssign": "off",
        "noEmptyInterface": "off",
        "noAssignInExpressions": "off"
      },
      "complexity": {
        "all": true,
        "noForEach": "off",
        "noBannedTypes": "off",
        "useLiteralKeys": "off",
        "noUselessTernary": "off",
        "noUselessFragments": "off",
        "noExcessiveCognitiveComplexity": "off"
      },
      "security": {
        "all": true
      }
    },
    "enabled": true,
    "include": [
      "*.ts",
      "*.mts",
      "*.js",
      "*.cjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.vue",
      "*.json",
      "*.jsonc",
      "*.astro",
      "*.svelte"
    ],
    "ignore": [
      "_",
      "out",
      "dist",
      "build",
      ".sqlx",
      "result",
      "vendor",
      "testdata",
      "generated",
      "*-env.d.ts",
      ".svelte-kit",
      "node_modules",
      "package-lock.json",
      "./app/src/generated",
      "./lib/poseidon-rs/constants.json"
    ]
  },
  "javascript": {
    "globals": ["NodeJS", "Astro"],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 100,
      "indentWidth": 2,
      "indentStyle": "space",
      "quoteStyle": "double",
      "bracketSpacing": true,
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "bracketSameLine": false,
      "jsxQuoteStyle": "double",
      "attributePosition": "auto",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off"
          },
          "style": {
            "useImportType": "off"
          }
        }
      }
    },
    {
      "include": ["*.svelte"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedLabels": "off",
            "noUnusedImports": "off",
            "useHookAtTopLevel": "off"
          },
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "suspicious": {
            "noConfusingLabels": "off"
          },
          "nursery": {
            "noUselessUndefinedInitialization": "off"
          }
        }
      }
    },
    {
      "include": ["scripts", "*config*"],
      "linter": {
        "rules": {
          "nursery": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "include": ["./app/src/lib/polyfill.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNodejsImportProtocol": "off"
          }
        }
      }
    }
  ]
}
