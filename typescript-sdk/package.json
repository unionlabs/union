{
  "name": "@unionlabs/client",
  "version": "0.0.0",
  "description": "Union Labs cross-chain transfers client",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup --config=tsup.config.ts",
    "faucet": "bun ./scripts/faucet.ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "demo": "node --import=tsx --env-file=.env ./scripts/demo.ts",
    "release": "bumpp package.json --commit --push --tag",
    "prebuild": "rm -rf dist",
    "check-package": "npx publint@latest --public --strict && npm pack && attw --pack",
    "clean": "rm -rf dist node_modules",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.32.2",
    "@cosmjs/encoding": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@cosmjs/tendermint-rpc": "^0.32.2",
    "viem": "^2.7.9"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.10",
    "@cosmjs/amino": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "@leapwallet/cosmos-snap-provider": "^0.1.25",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.11.17",
    "bumpp": "^9.3.0",
    "bun": "^1.0.26",
    "patch-package": "^8.0.0",
    "publint": "^0.2.7",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unionlabs/union.git",
    "directory": "lib/typescript"
  },
  "engines": {
    "node": ">=18"
  },
  "engineStrict": true,
  "sideEffects": false
}
