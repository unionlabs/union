---
// Simplified version to avoid viewer dependency
import Spline from './Spline.svelte';
export interface Props {
  spline: string;
  title?: string;
  description?: string;
}

const { spline, title, description } = Astro.props;
---
<div class="spline-cover">
  <Spline scene={spline} />
  {title && <h2>{title}</h2>}
  {description && <p>{description}</p>}
</div>
