const soliditySnippet = `
\`\`\`solidity title="lorem.sol" /onRecvPacket/1#w /relayer/#i /ibcPacket/#s /ACK_SUCCESS/#g /ACK_FAILURE/#r
contract DexPortal is IBCAppBase {
  IBCHandler private ibcHandler;

  mapping(address => Proxy) swapProxies;

  constructor(IBCHandler _ibcHandler) {
    ibcHandler = _ibcHandler;
  }

  function swap(
    address base,
    uint256 amount,
    uint256 minReturn,
    uint64 timeout
  ) public {
    Proxy quote = swapProxies[base];
    require(quote.port.length != 0);
    require(quote.channel.length != 0);
    IERC20(base).transferFrom(
      _msgSender(),
      address(this)
    );
    ibcHandler.send(
      quote.port,
      quote.channel,
      timeout,
      abi.encode(
        Swap({
          origin: _msgSender(),
          amount: amount,
          minReturn: minReturn
        })
      )
    );
  }
}
\`\`\`
`

