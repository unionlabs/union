---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NetworkLoader from '../components/NetworkLoader.svelte';

// Environment configuration
const siteUrl = import.meta.env.SITE_URL || "http://localhost:4321";
const disableContentful = import.meta.env.PUBLIC_DISABLE_CONTENTFUL || "true";
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Union Labs</title>
  
  <!-- Inline critical CSS -->
  <style>
    .network-warning {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      padding: 1rem;
      background: #ffecb3;
      color: #333;
      text-align: center;
      z-index: 10000;
    }
  </style>
  
  <script>
    // Client-side environment variables
    window.__env = {
      SITE_URL: "${siteUrl}",
      PUBLIC_DISABLE_CONTENTFUL: "${disableContentful}"
    };
  </script>
</head>
<body>
  <NetworkLoader client:load />
  
  <div id="slow-network-warning" class="network-warning">
    ⚠️ Slow network detected. Loading simplified content...
  </div>
  
  <Header />
  <slot />
  <Footer />
  
  <script>
    // Network handling
    document.addEventListener('DOMContentLoaded', () => {
      const LOAD_TIMEOUT = 10000;
      const loader = document.getElementById('global-loader');
      const warning = document.getElementById('slow-network-warning');
      
      if (!loader) return;
      
      // Handle timeout
      const timeoutId = setTimeout(() => {
        if (document.readyState !== 'complete') {
          loader.style.display = 'none';
          if (warning) warning.style.display = 'block';
        }
      }, LOAD_TIMEOUT);
      
      // Handle successful load
      window.addEventListener('load', () => {
        clearTimeout(timeoutId);
        loader.style.display = 'none';
      });
    });
  </script>
</body>
</html>
